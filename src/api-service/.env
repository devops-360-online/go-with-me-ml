# API Service Configuration
PORT=3000

# Database Configuration
POSTGRES_DSN=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/mlservice

# Redis Configuration
REDIS_URL=redis://${REDIS_HOST}:6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@rabbitmq:5672

# Logging Configuration
LOG_LEVEL=info

# Default Quota Limits
DEFAULT_DAILY_REQUEST_LIMIT=100
DEFAULT_DAILY_TOKEN_LIMIT=10000

# External Services
MAX_REQUESTS_PER_USER=100
TOKEN_LIMIT_PER_USER=10000

# Note: These environment variables should be set when deploying the service
# DO NOT store sensitive credentials in this file 